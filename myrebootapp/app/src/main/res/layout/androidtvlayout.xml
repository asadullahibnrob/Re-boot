<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#33FFFFFF"
    >


    <ImageView
        android:layout_marginLeft="180dp"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:src="@drawable/reboot1"
        android:background="@drawable/tvselector"
        android:id="@+id/reboot"/>

    <ImageView
        android:layout_toRightOf="@+id/reboot"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:id="@+id/recovery"
        android:src="@drawable/recovery"
        android:background="@drawable/tvselector"

       />
    <ImageView
        android:focusable="true"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/recovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bootloader"
        android:src="@drawable/bootloader"
        android:background="@drawable/tvselector"

        />
    <ImageView
        android:focusable="true"
        android:layout_marginLeft="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hotboot"
        android:background="@drawable/tvselector"

        android:layout_below="@+id/reboot"
        android:id="@+id/hotboot"/>
    <ImageView
        android:focusable="true"
        android:layout_toRightOf="@+id/hotboot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reboot"
        android:id="@+id/poweroff"
        android:src="@drawable/power"
        android:background="@drawable/tvselector"

        />

    <ImageView
        android:focusable="true"
        android:layout_toRightOf="@+id/poweroff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reboot"
        android:id="@+id/safemode"
        android:src="@drawable/safemode"
        android:background="@drawable/tvselector"

        />



</RelativeLayout>